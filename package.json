{
  "name": "@bgpat/{{repo_name}}",
  "version": "0.0.1",
  "description": "{{extension_description}}",
  "scripts": {
    "start": "webpack -w",
    "build": "webpack",
    "test": "web-ext lint",
    "submit": "web-ext-submit --api-key=$JWT_ISSUER --api-secret=$JWT_SECRET",
    "publish": "npm run publish:chrome && npm run publish:firefox",
    "publish:firefox": "npm run submit",
    "publish:chrome": "webstore upload --source web-ext-artifacts/* --auto-publish",
    "preversion": "dot-json manifest.json version $npm_package_version && git add manifest.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bgpat/{{repo_name}}.git"
  },
  "keywords": [
    "webextension",
    "firefox-addon"
  ],
  "author": "bgpat",
  "license": "{{repo_license}}",
  "bugs": {
    "url": "https://github.com/bgpat/{{repo_name}}/issues"
  },
  "homepage": "https://github.com/bgpat/{{repo_name}}#readme",
  "devDependencies": {
    "@babel/core": "7.27.4",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/polyfill": "7.12.1",
    "@babel/preset-env": "7.27.2",
    "@bgpat/webext-webpack-plugin": "0.1.8",
    "@babel/eslint-parser": "7.27.1",
    "babel-loader": "10.0.0",
    "babel-minify-webpack-plugin": "0.3.1",
    "chrome-webstore-upload-cli": "3.3.2",
    "dot-json": "1.3.0",
    "eslint": "9.28.0",
    "eslint-loader": "4.0.2",
    "husky": "9.1.7",
    "lint-staged": "16.1.0",
    "prettier": "3.5.3",
    "sass-loader": "16.0.5",
    "web-ext": "8.7.1",
    "web-ext-submit": "7.8.0",
    "webextension-polyfill": "0.12.0",
    "webpack": "5.99.9",
    "webpack-cli": "6.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
